<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.menu.profile.ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileFragment"
        android:orientation="vertical"
        android:weightSum="14"
        tools:ignore="Orientation">

        <FrameLayout
            android:paddingVertical="12dp"
            android:background="#0472D8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/while_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/back"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/back_icon"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Account"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"/>
        </FrameLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="500dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp">
                    <ImageView
                        android:id="@+id/avatar"
                        android:src="@drawable/avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>
                <ImageView
                    android:layout_gravity="bottom|right"
                    android:translationZ="10dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/edit_avatar"/>
            </FrameLayout>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nate Samson"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_gravity="bottom|center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/email"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_edit_text"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:textColor="#414141"
                android:textSize="20dp"
                android:text="nate@email.com"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:text="+84"/>
                <EditText
                    android:id="@+id/phone"
                    android:hint="Your phone number"
                    android:textSize="20dp"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <Spinner
                android:id="@+id/gender"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <EditText
                android:id="@+id/address"
                android:layout_marginBottom="20dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/border_edit_text"
                android:hint="Address"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Link Account"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>
            <FrameLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/google_icon"/>
                    <TextView
                        android:textSize="20dp"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Google"/>
                </LinearLayout>
                <androidx.appcompat.widget.SwitchCompat
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:thumbTint="@color/white"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </FrameLayout>
            <FrameLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/facebook_icon"/>
                    <TextView
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Facebook"/>
                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:thumbTint="@color/white"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </FrameLayout>
